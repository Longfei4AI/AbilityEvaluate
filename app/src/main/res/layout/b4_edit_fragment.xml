                        android:id="@+id/b_4_4_0_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_4_0" />
                    <RadioButton
                        android:id="@+id/b_4_4_1_RB"
                        style="@style/Custom.Font.Radio"
