                        android:text="@string/b_4_2_1" />
                    <RadioButton
                        android:id="@+id/b_4_2_2_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_2_2" />
                    <RadioButton
                        android:id="@+id/b_4_2_3_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_2_3" />
                    <RadioButton
                        android:id="@+id/b_4_2_4_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_2_4" />
                </RadioGroup>
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/line_table" >
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" >

                <TextView
                    style="@style/Custom.Font.Context.Inverse"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="@string/b_4_3" />
                <RadioGroup
                    android:id="@+id/b_4_3_RG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:id="@+id/b_4_3_0_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_3_0" />
