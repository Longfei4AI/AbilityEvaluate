<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tr_button"
        android:layout_below="@+id/header" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" >

                <TextView
                    style="@style/Custom.Font.Context.Inverse"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="@string/b_4_1" />
                <RadioGroup
                    android:id="@+id/b_4_1_RG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:id="@+id/b_4_1_0_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_1_0" />
                    <RadioButton
                        android:id="@+id/b_4_1_1_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_1_1" />
                    <RadioButton
                        android:id="@+id/b_4_1_2_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_1_2" />
                    <RadioButton
                        android:id="@+id/b_4_1_3_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_1_3" />
                    <RadioButton
                        android:id="@+id/b_4_1_4_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_1_4" />
                </RadioGroup>
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_table" >
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" >

                <TextView
                    style="@style/Custom.Font.Context.Inverse"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="@string/b_4_2" />
                <RadioGroup
                    android:id="@+id/b_4_2_RG"
