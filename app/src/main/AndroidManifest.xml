<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elder.abilityevaluate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.MainMenuActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.MainListActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.BaseInformationListActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.BaseInformationAddActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.BaseInformationEditActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.BaseInformationViewActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activity.EvaluationListActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EvaluationEditActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EvaluationViewActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activity.EvaluateReportListActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activity.EvaluateReportEditActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EvaluateReportViewActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activity.SettingActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.MipcaActivityCapture"
            android:launchMode="standard"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name=".service.LogService" > </service>
    </application>

</manifest>