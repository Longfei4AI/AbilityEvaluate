                        android:id="@+id/b_4_3_1_RB"
                        style="@style/Custom.Font.Radio"
                        android:button="@drawable/radio"
                        android:text="@string/b_4_3_1" />
                    <RadioButton
                        android:id="@+id/b_4_3_2_RB"
                        style="@style/Custom.Font.Radio"
