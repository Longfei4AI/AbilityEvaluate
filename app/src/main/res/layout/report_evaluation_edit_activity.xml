<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_form" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/head_color" >

        <TextView
            android:id="@+id/textView1"
            style="@style/Custom.Font.Title.H2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/head_color"
            android:gravity="center"
            android:text="@string/detail_report"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="back"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tr_button"
        android:layout_below="@+id/header" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/Custom.FormBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/Custom.Font.Label.Title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="@string/grade_classification" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_table" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp" >

                        <TextView
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/b_1_grade" />

                        <TextView
                            android:id="@+id/report_1_1_tv"
                            style="@style/Custom.Font.TextView"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:inputType="textNoSuggestions"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_table" >
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp" >

                        <TextView
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/b_2_grade" />

                        <TextView
                            android:id="@+id/report_1_2_tv"
                            style="@style/Custom.Font.TextView"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/line_table" >
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp" >

                        <TextView
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/b_3_grade" />

                        <TextView
                            android:id="@+id/report_1_3_tv"
                            style="@style/Custom.Font.TextView"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/line_table" >
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp" >

                        <TextView
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/b_4_grade" />

                        <TextView
                            android:id="@+id/report_1_4_tv"
                            style="@style/Custom.Font.TextView"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/Custom.FormBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <TextView
                    style="@style/Custom.Font.Label.Title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="@string/e_grade_pre" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_table" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp" >


                        <TextView
                            android:id="@+id/report_2_1_tv"
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/Custom.FormBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <TextView
                    style="@style/Custom.Font.Label.Title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="@string/grade_change_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_table" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TableRow
                        android:id="@+id/report_3_1_tr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/report_3_1_tv"
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                    <LinearLayout
                        android:id="@+id/report_3_2_ll"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/line_table"
                        android:orientation="horizontal"
                        android:visibility="gone">
                    </LinearLayout>

                    <TableRow
                        android:id="@+id/report_3_2_tr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/report_3_2_tv"
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                    <LinearLayout
                        android:id="@+id/report_3_3_ll"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/line_table"
                        android:orientation="horizontal"
                        android:visibility="gone">
                    </LinearLayout>

                    <TableRow
                        android:id="@+id/report_3_3_tr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/report_3_3_tv"
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/Custom.FormBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <TextView
                    style="@style/Custom.Font.Label.Title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="@string/e_grade_final" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_table" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp" >


                        <TextView
                            android:id="@+id/report_4_1_tv"
                            style="@style/Custom.Font.Context.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textSize="25sp" >
                        </TextView>
                    </TableRow>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>